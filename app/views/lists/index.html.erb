<%= link_to "Create Hunt", new_list_path, method:"get", class: "btn btn-lg btn-success" %>

<div class="switch-lists-button" id="all-lists-button">
  All Lists
</div>

<div class="switch-lists-button" id="your-lists-button">
  Your Lists
</div>

<div id="your-lists">
  <% @lists.each do |list| %>
    <% if list.clues.length > 0 && list.creator && list.creator == current_user.id  %>
    <%= link_to "Name: #{list.name}, Location: #{list.location}", "/lists/#{list.id}/clues/#{list.clues.first.id}", method:"get", class: "btn btn-lg btn-success" %>
    <% end %>
  <% end %>
</div>

<div id="all-lists">
  <% @lists.each do |list| %>
    <% if list.clues.length > 0 %>
    <%= link_to "Name: #{list.name}, Location: #{list.location}", "/lists/#{list.id}/clues/#{list.clues.first.id}", method:"get", class: "btn btn-lg btn-success" %>
    <% end %>
  <% end %>
</div>
