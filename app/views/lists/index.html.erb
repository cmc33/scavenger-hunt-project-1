<div class="row">
  <div class="panel panel-default col-xs-12 col-sm-4">
    <div class="switch-lists-button panel-body" id="all-lists-button">
      All Hunts
    </div>
  </div>
  <div class="panel panel-default col-xs-12 col-sm-4">
    <div class="switch-lists-button panel-body" id="your-lists-button">
      Hunts You Created
    </div>
  </div>
  <div class="panel panel-default col-xs-12 col-sm-4">
    <div class="panel-body">
      <%= link_to "Create Hunt", new_list_path, method:"get" %>
    </div>
  </div>
</div>

<div id="your-lists">
  <% @lists.each do |list| %>
    <% if list.clues.length > 0 && list.creator && list.creator == current_user.id %>
      <div class="col-xs-10 col-sm-4 panel panel-default">
        <div class="panel-body">
          <%= link_to "#{list.name}, #{list.location}", "/lists/#{list.id}/clues/#{list.clues.first.id}", method:"get" %>
        </div>
      </div>
      <div class="col-xs-2 col-sm-2 panel panel-default">
        <div id="link-to-edit-page panel-body">
          <%= link_to image_tag("edit.png"), "/lists/#{list.id}/edit" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


<div id="all-lists">
  <% @lists.each do |list| %>
    <% if list.clues.length>0 %>
      <div class="col-xs-12 col-sm-6 panel panel-default">
        <div class="panel-body">
          <%= link_to "#{list.name}, #{list.location}", "/lists/#{list.id}/clues/#{list.clues.first.id}", method:"get" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
