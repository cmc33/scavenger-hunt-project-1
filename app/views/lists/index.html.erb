<div class="row">
  <div class="panel panel-default col-xs-12 col-sm-4 action2 container-fluid text-center wow fadeIn">
    <div class="switch-lists-button panel-body" id="all-lists-button">
      All Hunts
    </div>
  </div>
  <div class="panel panel-default col-xs-12 col-sm-4 action2 container-fluid text-center wow fadeIn">
    <div class="switch-lists-button panel-body" id="your-lists-button">
      Hunts You Created
    </div>
  </div>
  <div class="panel panel-default col-xs-12 col-sm-4 action2 container-fluid text-center wow fadeIn">
    <div class="panel-body">
      <%= link_to "Create Hunt", new_list_path, method:"get" %>
    </div>
  </div>
</div>

<div id="all-lists">
  <% @lists.each do |list| %>
    <% if list.clues.length > 0  %>
      <div class="col-xs-10 col-sm-4">
        <div class="list-index-item panel panel-default" style="max-height: 230px, min-height: 230px">
        <div class="panel panel-body>">
          <p> <%= "#{list.name}" %> </p>
          <p> <%= "#{list.location}" %></p> 
        <%= link_to image_tag("play.png"), "/lists/#{list.id}/clues/#{list.clues.first.id}", method:"get" %>
        </div> 
        </div>  
      </div>
    <% end %>
  <% end %>
</div>

<div id="your-lists">
  <% @lists.each do |list| %>
    <% if list.clues.length > 0  && list.creator && list.creator == current_user.id %>
      <div class="col-xs-10 col-sm-4">
        <div class="list-index-item panel panel-default" style="max-height: 230px, min-height: 230px">
        <div class="panel panel-body>">
          <p> <%= "#{list.name}" %> </p>
          <p> <%= "#{list.location}" %></p> 
          <div id="link-to-edit-page panel-body">
            <%= link_to image_tag("play.png"), "/lists/#{list.id}/clues/#{list.clues.first.id}", method:"get" %>
            <%= link_to image_tag("edit.png"), "/lists/#{list.id}/edit" %>
          </div> 
        </div> 
        </div> 
      </div>
    <% end %>
  <% end %>
</div>





          
