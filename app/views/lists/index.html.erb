<div class="row">
  <div class="panel panel-default btn btn-white btn-lg col-xs-12 col-sm-4 action2 container-fluid text-center wow fadeIn">
    <div class="switch-lists-button" id="all-lists-button">
      All Hunts
    </div>
  </div>
  <div class="panel panel-default btn btn-white btn-lg col-xs-12 col-sm-4 action2 container-fluid text-center wow fadeIn">
    <div class="switch-lists-button" id="your-lists-button">
      Hunts You Created
    </div>
  </div>
  <div class="panel panel-default col-xs-12 col-sm-4 action2 container-fluid btn btn-white btn-lg text-center wow fadeIn">
    <div class="">
      <%= link_to "Create Hunt", new_list_path, method:"get" %>
    </div>
  </div>
</div>

<div id="your-lists">
  <% @lists.each do |list| %>
    <% if list.clues.length > 0 && list.creator && list.creator == current_user.id %>
      <div class="col-xs-12 col-sm-6 panel panel-default action2 container-fluid btn btn-white btn-lg text-center wow fadeIn" id="index-button">
        <div class="panel-body">
          <%= link_to "#{list.name}", "/lists/#{list.id}/clues/#{list.clues.first.id}", method:"get" %>
          <br>
          <%= link_to "#{list.location}", "/lists/#{list.id}/clues/#{list.clues.first.id}", method:"get" %>
          <div id="link-to-edit-page panel-body">
            <%= link_to image_tag("white-edit.png"), "/lists/#{list.id}/edit" %>
          </div>
        </div>
      </div>

    <% end %>
  <% end %>
</div>


<div id="all-lists">
  <% @lists.each do |list| %>
    <% if list.clues.length>0 %>
      <div class="col-xs-12 col-sm-6 panel panel-default action2 container-fluid btn btn-white btn-lg text-center wow fadeIn" id="index-button">
        <div class="panel-body" style="min-height: 40; max-height: 40;">
          <%= link_to "#{list.name}", "/lists/#{list.id}/clues/#{list.clues.first.id}", method:"get" %>
          <br>
          <%= link_to "#{list.location}", "/lists/#{list.id}/clues/#{list.clues.first.id}", method:"get" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
