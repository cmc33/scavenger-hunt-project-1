<div class= "edit_clue">
  Edit your clue using the form below.
  <%= form_tag(list_clues_path, method: "post", class:"edit-clue-form") do %>
    <pre><%= text_field_tag(:text, nil, value: clue.text) %></pre>
    &nbsp;
    <pre><%= text_field_tag(:answer, nil, value: clue.answer) %></pre>
    <%= submit_tag("Submit Clue", class: "btn btn-white btn-lg") %>
  <% end %>
</div>
